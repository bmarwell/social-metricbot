<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} [%-5level] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.micronaut" level="info" />
  <logger name="io.micronaut.core" level="info" />
  <logger name="io.micronaut.context.env" level="warn"/>
  <logger name="io.micronaut.context.condition" level="info" />
  <logger name="io.micronaut.data" level="info"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
