<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSS}] [%-5level] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.github.bmarwell.social.metricbot" level="info"/>
  <logger name="io.github.bmarwell.social.metricbot.app" level="debug"/>
  <logger name="io.github.bmarwell.social.metricbot.conversion" level="debug"/>
  <logger name="io.github.bmarwell.social.metricbot.db" level="debug"/>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
